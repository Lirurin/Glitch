        link(rel='stylesheet', href='css/main.css')
        link(rel='stylesheet', href='css/swiper.min.css')
        link(rel='icon', href='favicon/favicon.ico', type='image/x-icon')
        link(rel='shortcut icon', href='favicon/favicon.ico', type='image/x-icon')
        title Glitch
    body
        header.header
            .header__hidden
                .header__hidden-wrap
                    .header__hidden-part
                        .header__account
                            ul
                                li
                                    a.header__link-acc(aria-label='to my account', href='#') my account
                                li
                                    a.header__link-acc(aria-label='to wishlist', href='#') wishlist
                                li
                                    a.header__link-acc(aria-label='to login', href='#') login
                    .header__hidden-part
                        .header__menu
                            ul
                                li
                                    a.header__link-menu(aria-label='to home page', href='#') Home
                                li
                                    a.header__link-menu(aria-label='to gallery', href='#') Gallery
                                li
                                    a.header__link-menu(aria-label='to categories', href='#') Categories
                        .header__social
                            a.header__social-link(aria-label='facebook contact', href='#')
                            a.header__social-link(aria-label='twitter contact', href='#')
                            a.header__social-link(aria-label='pinterest contact', href='#')
                            a.header__social-link(aria-label='instagram contact', href='#')
                            span.header__contact-wrap
                                | Call +001 555 801
                .header__arrow-hidden.draggable
                    svg
                        g
                            line(x1='0', y1='0', x2='150', y2='40', stroke='#fff')
                            polygon.poly-back(points='1,0 150,39 300,0')
                            polygon.poly-front(points='115,15 150,25 185,15')
                            line(x1='150', y1='40', x2='300', y2='0', stroke='#fff')
            nav.header__nav
                .header__cont
                    .header__topbar
                        span.header__contact-top
                            | Call +001 555 801
                        .header__account-top
                            ul
                                li
                                    a.header__link-acc(aria-label='to welcome page', href='#') Welcome
                                li
                                    a.header__link-acc(aria-label='to my account', href='#') my account
                                li
                                    a.header__link-acc(aria-label='to wishlist', href='#') wishlist
                                li
                                    a.header__link-acc(aria-label='to login', href='#') login
                .header__bottom.sticky-bot--load
                    .header__menu-bottom
                        .header__menu-left
                            ul
                                li
                                    a.header__menu-link(aria-label='to home page', href='#') Home
                                li
                                    a.header__menu-link(aria-label='to gallery', href='#') Gallery
                                li
                                    a.header__menu-link(aria-label='to categories', href='#') Categories
                        h1.Logo.sticky-Logo--load.glitch.is-glitching(data-text='Glitch') Glitch
                        .header__menu-right
                            a.header__link-social(aria-label='facebook contact', href='#')
                            a.header__link-social(aria-label='twitter contact', href='#')
                            a.header__link-social(aria-label='pinterest contact', href='#')
                            a.header__link-social(aria-label='instagram contact', href='#')
                .header__arrow
                    .header__arrow-vector
                        svg
                            line(x1='0', y1='0', x2='200', y2='60', stroke='#fff')
                            polygon(points='1,0 200,59 400,0')
                            line(x1='200', y1='60', x2='400', y2='0', stroke='#fff')
        main
            section.showcase
                .swiper-container.showcase__slider
                    .swiper-wrapper.showcase__slider-wrap
                        .swiper-slide
                            img.showcase__image.swiper-lazy(src="./img/slide1.jpg" alt="...")
                        .swiper-slide.showcase__slide
                            img.showcase__image.swiper-lazy(src="./img/slide2.jpg" alt="...")
                            .showcase__sale
                                p.showcase__sale-season MID-SEASON
                                p.showcase__sale-header SALE
                                p.showcase__sale-season UP TO
                                p.showcase__sale-discount 50 % 	 OFF
                        .swiper-slide
                            img.showcase__image.swiper-lazy(src="./img/slide3.jpg" alt="...")
                        .swiper-slide
                            img.showcase__image.swiper-lazy(src="./img/slide4.jpg" alt="...")
                            .showcase__sale
                                p.showcase__sale-season MID-SEASON
                                p.showcase__sale-header SALE
                                p.showcase__sale-season UP TO
                                p.showcase__sale-discount 50 % 	 OFF
                    .swiper-pagination.showcase__pagination
            section.features
                .features__cont
                    .features__cont--left
                        .features__text
                            span.features__header FREE SHIPPING
                            span.features__info In Order Min $200
