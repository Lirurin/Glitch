                                a.hand-picked__button(href='#')  SHOP NOW
                        .hand-picked__product
                            img(src='img/coll_block_left_2.jpg', alt='boots')
                            .hand-picked__overlay
                                a.hand-picked__button(href='#')  SHOP NOW
                    .hand-picked__center
                        img.hand-picked__image(src='img/coll_block_center_1.jpg', alt='model')
                    .hand-picked__side.hand-picked__side-side.hand-picked__side-right
                        .hand-picked__product
                            img(src='img/coll_block_right_1.jpg', alt='gloves')
                            .hand-picked__overlay
