doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='description', content='cyberpunk clothing shop')
        meta(name='keywords', content='Glitch,cyberpunk,sci fi,clothing,apparel,shop')
        meta(name='theme-color', content='#000')
