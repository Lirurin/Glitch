                    .features__cont--center
                        span.features__header 30-DAYS RETURNS
                        span.features__info Money Back Guarantee
                    .features__cont--right
                        .features__image
                        .features__text
                            span.features__header 24/7 SUPPORT
                            span.features__info Lifestyme Support
